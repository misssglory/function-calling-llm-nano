{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hybrid Search Agent - QVikhr 3B (Step-by-Step)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "--step-by-step",
                "--visible",
